<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.AnimeApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/netflix_red</item>
        <item name="colorPrimaryVariant">@color/netflix_red_dark</item>
        <item name="colorOnPrimary">@color/text_primary</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/anime_purple</item>
        <item name="colorSecondaryVariant">@color/anime_purple_dark</item>
        <item name="colorOnSecondary">@color/text_primary</item>

        <!-- Background Colors -->
        <item name="android:colorBackground">@color/black</item>
        <item name="colorSurface">@color/card_background</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Text Appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Material Components -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Theme.AnimeApp" parent="Base.Theme.AnimeApp" />

    <!-- Custom Card Style -->
    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="contentPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/black</item>
        <item name="titleTextColor">@color/text_primary</item>
        <item name="subtitleTextColor">@color/text_secondary</item>
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/netflix_red</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.App.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/text_secondary</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="cornerRadius">@dimen/card_corner_radius</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.App.Title" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.App.Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textSize">@dimen/text_size_subtitle</item>
    </style>

    <style name="TextAppearance.App.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">@dimen/text_size_body</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/text_tertiary</item>
        <item name="android:textSize">@dimen/text_size_caption</item>
    </style>
</resources>
